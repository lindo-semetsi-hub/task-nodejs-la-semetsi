{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "lib": ["es2021", "dom"]
    },
    "include": ["src/**/*"]
}